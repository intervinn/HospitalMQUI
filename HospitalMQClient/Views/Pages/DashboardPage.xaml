<Page
    x:Class="HospitalMQClient.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HospitalMQClient.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Имя" VerticalAlignment="Center"/>
                <ui:TextBox Text="{Binding Path=ViewModel.Name,Mode=TwoWay}" Width="150" Margin="5 0 0 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <Label Content="Возраст" VerticalAlignment="Center"/>
                <ui:NumberBox Text="{Binding Path=ViewModel.Age,Mode=TwoWay}" Width="150" Margin="5 0 0 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <Label Content="Имя лечащего врача" VerticalAlignment="Center"/>
                <ui:TextBox Text="{Binding Path=ViewModel.DoctorName,Mode=TwoWay}" Width="150" Margin="5 0 0 0"/>
            </StackPanel>

            <ui:Button Margin="0 10 0 0" Content="Сгенерировать" Command="{Binding ViewModel.GenerateFieldsCommand}"/>
            <ui:Button Margin="0 10 0 0" Content="Отправить" Command="{Binding ViewModel.SendMessageCommand}"/>
        </StackPanel>
    </Grid>
</Page>
